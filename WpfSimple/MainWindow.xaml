<Window x:Class="WpfSimple.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSimple"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ListBox x:Name="lbEmployee" 
                 SelectionMode="Single" 
                 SelectionChanged="lbEmployee_SelectionChanged"
                 
                 HorizontalAlignment="Left"
                 Height="199"
                 Margin="10,67,0,0" 
                 
                 VerticalAlignment="Top"
                 Width="222"/>
        <Button x:Name="btnAddEmployee" Content="Добавить Сотрудника" 
                HorizontalAlignment="Left" 
                Margin="10,0,0,10" 
                VerticalAlignment="Bottom"
                Click="Button_Click"
                
                Width="222"/>
        <ListBox x:Name="lbDepartament" HorizontalAlignment="Left" Height="199" Margin="262,67,0,0" VerticalAlignment="Top" Width="218"/>
        <Button x:Name="btnAddDepartament" Content="Добавить Департамент" HorizontalAlignment="Left" Margin="262,289,0,0" VerticalAlignment="Top" Width="218" Click="btnAddDepartament_Click"/>


    </Grid>
</Window>
